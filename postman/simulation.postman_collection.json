{
  "info": {
    "name": "Regulus AML - Simulation",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8081"
    },
    {
      "key": "request_id",
      "value": "postman-request-id"
    },
    {
      "key": "forwarded_for",
      "value": "127.0.0.1"
    },
    {
      "key": "device_id",
      "value": "postman-device"
    },
    {
      "key": "customer_id",
      "value": ""
    },
    {
      "key": "account_number",
      "value": ""
    },
    {
      "key": "transaction_id",
      "value": ""
    },
    {
      "key": "alert_id",
      "value": ""
    },
    {
      "key": "case_id",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "List Scenarios",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-Request-ID",
            "value": "{{request_id}}"
          },
          {
            "key": "X-Forwarded-For",
            "value": "{{forwarded_for}}"
          },
          {
            "key": "X-Device-Id",
            "value": "{{device_id}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base_url}}/api/v1/simulate/scenarios"
      }
    },
    {
      "name": "Run Scenario (High Deposit)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-Request-ID",
            "value": "{{request_id}}"
          },
          {
            "key": "X-Forwarded-For",
            "value": "{{forwarded_for}}"
          },
          {
            "key": "X-Device-Id",
            "value": "{{device_id}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base_url}}/api/v1/simulate/scenario?account_number={{account_number}}",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"scenario_id\": \"high_deposit\"\n}"
        }
      }
    },
    {
      "name": "Reset Data",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-Request-ID",
            "value": "{{request_id}}"
          },
          {
            "key": "X-Forwarded-For",
            "value": "{{forwarded_for}}"
          },
          {
            "key": "X-Device-Id",
            "value": "{{device_id}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base_url}}/api/v1/simulate/reset"
      }
    }
  ]
}